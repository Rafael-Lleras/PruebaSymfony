{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
	
	{% block up %}{{ parent() }}{% endblock %}
		
		{% block content %}
    		
    		<div class="example-wrapper">
			    <h1>Edición de categoría</h1>
			</div>
    		<div class="form-three widget-shadow">
    			{{ form_start(category_form) }}
				{#<form action="" method="POST" class="form-horizontal">#}
				<div class="form-group">
					<label for="code" class="col-sm-3 control-label">Código</label>
				    {{ form_row(category_form.code, {'label': false}) }}
				</div>
				<div class="form-group">
					<label for="code" class="col-sm-3 control-label">Nombre</label>
					{{ form_row(category_form.name, {'label': false}) }}
				</div>
				<div class="form-group">
					<label for="desciption" class="col-sm-3 control-label">Descripción</label>
					{{ form_row(category_form.description, {'label': false, 'attr':{'max_length':1048576 , 'rows':5 , 'cols':70}}) }}
				</div>	
        		<div class="form-group centered">
        			<button type="submit" class="btn btn-primary">Editar</button>
    			</div>

    			{{ form_end(category_form) }}

    		</div>

		{% endblock %}

	{% block down %}{{ parent() }}{% endblock %}
	
{% endblock %}
